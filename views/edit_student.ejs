<%- include('layouts/header') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-header bg-success">
                        <h3 class="text-light">Edit Student ( <%= student.name %> )</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/students/update/<%= student.id %>" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" value="<%= student.name %>" class="form-control form-control-lg">
                            </div>
                            <div class="mb-3">
                                <label for="email">Email</label>
                                <input type="email" name="email" value="<%= student.email %>" class="form-control form-control-lg">
                            </div>
                            <div class="mb-3">
                                <label for="phone">Phone</label>
                                <input type="tel" name="phone" value="<%= student.phone %>" class="form-control form-control-lg">
                            </div>
                            <div class="mb-3">
                                <label for="image">Image</label>
                                <input type="file" name="image" class="form-control form-control-lg">
                                <img src="/images/<%= student.image %>" width="150" class="img-thumbnail mt-1">
                                <input type="hidden" name="old_image" value="<%= student.image %>" id="">
                            </div>

                    </div>
                    <div class="card-footer d-grid">
                        <button type="submit" class="btn btn-success btn-lg">Update</button>
                    </div>
                </form>
            </div>




        </div>
    </div>
    </div >






    <% - include('layouts/footer') %>