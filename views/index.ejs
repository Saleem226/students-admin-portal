<%- include('layouts/header') %>

  <div class="container mt-2">

    <div class="row">
      <div class="col-lg-12">

        <% if(message){ %>
          <div class="alert alert-dismissible fade show alert-<%= message.type %> role=" alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>

            <strong>
              <%= message.message %>
            </strong>
          </div>
          <% } %>
            <div class="table-responsive my-3">
              <table class="table table-striped text-center my-3">
                <thead>
                  <tr class="table-dark">

                    <th>ID</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>E-Mail</th>
                    <th>Phone</th>
                    <th>Actions</th>
                  </tr>
                </thead>


                <tbody>
                  <% if(!students=='' ){ %>

                    <% students.forEach((student,index)=>{ %>


                      <tr align="middle">
                        <td>
                          <%= index %>
                        </td>
                        <td><img src="/images/<%= student.image %>" width="50" class="img-thumbnail"></td>
                        <td>
                          <%= student.name %>
                        </td>
                        <td>
                          <%= student.email %>
                        </td>
                        <td>
                          <%= student.phone %>
                        </td>
                        <td>
                          <a href="/students/edit/<%= student._id %>" class="text-success">
                            <i class="fas fa-edit fa-lg mx-1"></i>
                          </a>
                          <a href="/students/delete/<%= student._id %>" class="text-danger">
                            <i class="fas fa-trash fa-lg mx-1"></i>
                          </a>
                        </td>
                      </tr>
                      <% }) %>
                        <% }else{ %>

                          <tr>
                            <td colspan="6">No students found</td>
                          </tr>

                          <% } %>

                </tbody>

              </table>
            </div>
      </div>
    </div>

  </div>

  <%- include('layouts/footer') %>